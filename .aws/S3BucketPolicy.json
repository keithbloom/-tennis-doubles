{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DenyAllExceptSpecificAccountAndRoot",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::tennis-doubles-backup",
                "arn:aws:s3:::tennis-doubles-backup/*"
            ],
            "Condition": {
                "StringNotLike": {
                    "aws:PrincipalArn": [
                        "arn:aws:iam::449125509679:user/tennis-doubles-backup-user",
                        "arn:aws:iam::449125509679:root"
                    ]
                }
            }
        },
        {
            "Sid": "AllowSpecificActionsForBackupUser",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::449125509679:user/tennis-doubles-backup-user"
            },
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::tennis-doubles-backup",
                "arn:aws:s3:::tennis-doubles-backup/*"
            ]
        },
        {
            "Sid": "AllowFullAccessForRootUser",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::449125509679:root"
            },
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::tennis-doubles-backup",
                "arn:aws:s3:::tennis-doubles-backup/*"
            ]
        }
    ]
}